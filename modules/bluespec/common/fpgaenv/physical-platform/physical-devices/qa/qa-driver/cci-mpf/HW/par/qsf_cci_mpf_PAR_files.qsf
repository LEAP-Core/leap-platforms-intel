##
## Define the path to MPF source files.
##
set CCI_MPF_SRC "../src/cci-mpf"

##
## MPF support multiple CCI platforms.  Uncomment one of the macros to
## specify the platform.
##
set_global_assignment -name VERILOG_MACRO "USE_PLATFORM_CCIP=1"
#set_global_assignment -name VERILOG_MACRO "USE_PLATFORM_CCIS=1"

## MPF directories
set_global_assignment -name SEARCH_PATH $CCI_MPF_SRC
set_global_assignment -name SEARCH_PATH $CCI_MPF_SRC/cci-if
set_global_assignment -name SEARCH_PATH $CCI_MPF_SRC/cci-mpf-if
set_global_assignment -name SEARCH_PATH $CCI_MPF_SRC/cci-mpf-prims
set_global_assignment -name SEARCH_PATH $CCI_MPF_SRC/cci-mpf-shims
set_global_assignment -name SEARCH_PATH $CCI_MPF_SRC/cci-mpf-shims/cci_mpf_shim_vtp

## Type and interface Packages and header files
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-if/ccis_if_pkg.sv
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-if/ccis_if_funcs_pkg.sv
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-if/ccip_if_pkg.sv
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-if/ccip_if_funcs_pkg.sv
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-mpf-if/cci_mpf_if_pkg.sv
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-if/cci_csr_if_pkg.sv
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-if/ccip_feature_list_pkg.sv
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci_mpf_csrs.h
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci_mpf_csrs_pkg.sv

## Primary MPF module that instantiates the desired shims
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci_mpf.sv

## Map CCI wires to MPF's primary interface
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-mpf-if/ccip_wires_to_mpf.sv
set_global_assignment -name SYSTEMVERILOG_FILE $CCI_MPF_SRC/cci-mpf-if/ccis_wires_to_mpf.sv

